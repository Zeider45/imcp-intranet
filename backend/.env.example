# Django Settings
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
# Hosts allowed to serve the Django app
ALLOWED_HOSTS=localhost,127.0.0.1,imcp-intranet.local,172.16.101.106

# Database Configuration
# SQLite is used by default. For PostgreSQL or MySQL, configure accordingly:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# CORS Settings (Frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://imcp-intranet.local

# Active Directory / LDAP Configuration with django-auth-ldap
# Example configuration for imcp-intranet.local domain
# 
# For "Strong(er) authentication required" error, use one of these options:
# 1. Use ldap:// with START_TLS (automatically enabled in settings.py)
# 2. Use ldaps:// for secure LDAP (recommended for production)
#    AUTH_LDAP_SERVER_URI=ldaps://172.16.101.106:636
# 3. Keep ldap:// and let the system handle START_TLS
#
AUTH_LDAP_SERVER_URI=ldap://172.16.101.106:389
AUTH_LDAP_BIND_DN=CN=administrator,CN=Users,DC=imcp-intranet,DC=local
AUTH_LDAP_BIND_PASSWORD=your_password_here
AUTH_LDAP_USER_SEARCH_BASE=DC=imcp-intranet,DC=local
AUTH_LDAP_USER_SEARCH_FILTER=(sAMAccountName=%(user)s)
